{
    "name": "bk2k/rights-and-roles",
    "type": "typo3-cms-extension",
    "description": "Extension for enhanced Rights and Roles",
    "keywords": [
        "TYPO3 CMS",
        "backend",
        "rights",
        "roles"
    ],
    "homepage": "https://github.com/benjaminkott/ext-rights-and-roles",
    "authors": [
        {
            "name": "Benjamin Kott",
            "email": "info@bk2k.info",
            "role": "Developer",
            "homepage": "http://www.bk2k.info/"
        },
        {
            "name": "TEAMWFP",
            "email": "info@teamwfp.de",
            "role": "Developer",
            "homepage": "https://www.teamwfp.de/"
        }
    ],
    "license": [
        "GPL-2.0-or-later"
    ],
    "support": {
        "issues": "https://github.com/benjaminkott/ext-rights-and-roles/issues"
    },
    "require": {
        "php": ">=7.4.0",
        "typo3/cms-backend": "^11.5 || ^12.4",
        "typo3/cms-beuser": "^11.5 || ^12.4",
        "typo3/cms-core": "^11.5 || ^12.4",
        "typo3/cms-extbase": "^11.5 || ^12.4",
        "typo3/cms-extensionmanager": "^11.5 || ^12.4",
        "typo3/cms-fluid": "^11.5 || ^12.4",
        "typo3/cms-frontend": "^11.5 || ^12.4",
        "typo3/cms-install": "^11.5 || ^12.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.20",
        "overtrue/phplint": "^9.0",
        "typo3/cms-belog": "^11.5 || ^12.4",
        "typo3/cms-felogin": "^11.5 || ^12.4",
        "typo3/cms-filelist": "^11.5 || ^12.4",
        "typo3/cms-info": "^11.5 || ^12.4",
        "typo3/cms-lowlevel": "^11.5 || ^12.4",
        "typo3/cms-tstemplate": "^11.5 || ^12.4"
    },
    "autoload": {
        "psr-4": {
            "BK2K\\RightsAndRoles\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BK2K\\RightsAndRoles\\Tests\\": "Tests"
        }
    },
    "config": {
        "bin-dir": ".build/bin",
        "optimize-autoloader": true,
        "sort-packages": true,
        "vendor-dir": ".build/vendor",
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
    "scripts": {
        "cgl": [
            "php-cs-fixer fix"
        ],
        "post-autoload-dump": [
            "[ -d .build/public/_assets ] || mkdir -p .build/public/typo3conf/ext/",
            "[ -d .build/public/_assets ] || [ -L .build/public/typo3conf/ext/rights_and_roles ] || ln -snvf ../../../../. .build/public/typo3conf/ext/rights_and_roles"
        ]
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "rights_and_roles",
            "web-dir": ".build/public"
        }
    }
}
